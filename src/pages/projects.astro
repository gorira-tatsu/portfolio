---
import Layout from '@layouts/Layout.astro';
import profileData from '@data/profile.json';

const { experience, projects } = profileData;
---

<Layout title="Activities | Tatsuhiko Akiyama" description="Research projects and professional experiences of Tatsuhiko Akiyama">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl md:text-4xl font-bold mb-8 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">Activities</h1>
    
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Research Projects</h2>
      <div class="space-y-8">
        {projects.map((project, index) => (
          <div class="bg-white rounded-lg overflow-hidden shadow-sm border border-gray-100">
            <div class="md:flex">
              <div class="md:w-1/3">
                <img 
                  src={project.image} 
                  alt={project.title} 
                  class="w-full h-60 md:h-full object-cover"
                />
              </div>
              <div class="p-6 md:w-2/3">
                <h3 class="text-xl font-bold mb-3">{project.title}</h3>
                <p class="text-gray-700 mb-4">{project.description}</p>
                
                <div class="flex flex-wrap gap-2">
                  {project.tags.map(tag => (
                    <span class="px-3 py-1 bg-blue-50 text-blue-700 rounded-full text-sm">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>
    
    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6">Professional Experience</h2>
      <div class="space-y-8">
        {experience.map((exp, index) => (
          <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-100">
            <div class="flex flex-col md:flex-row md:justify-between md:items-start gap-2 mb-4">
              <h3 class="text-xl font-bold">{exp.title}</h3>
              <span class="inline-block px-3 py-1 bg-blue-50 text-blue-800 rounded-full text-sm">
                {exp.period}
              </span>
            </div>
            
            <p class="text-gray-700 mb-4 whitespace-pre-line">{exp.description}</p>
            
            {exp.links && exp.links.length > 0 && (
              <div class="flex gap-3 flex-wrap">
                {exp.links.map(link => (
                  <a 
                    href={link.url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-4 py-1 border border-gray-300 rounded-md text-sm text-gray-700 bg-white hover:bg-gray-50 transition-colors"
                  >
                    {link.name}
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                ))}
              </div>
            )}
          </div>
        ))}
      </div>
    </section>
  </div>
</Layout>