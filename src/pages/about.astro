---
import Layout from '@layouts/Layout.astro';
import profileData from '@data/profile.json';

const { basic, links, research, scholarships, awards, memberships } = profileData;
---

<Layout title="About | Tatsuhiko Akiyama" description="About Tatsuhiko Akiyama - High school student researcher in AI/ML">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-3xl md:text-4xl font-bold mb-8 bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">About Me</h1>
    
    <section class="mb-12 bg-white p-6 rounded-lg shadow-sm">
      <h2 class="text-2xl font-bold mb-4">Basic Information</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <h3 class="font-medium text-gray-700">Name</h3>
          <p class="mb-2">{basic.name}</p>
          
          <h3 class="font-medium text-gray-700">Also Known As</h3>
          <p class="mb-2">{basic.aliases.join(', ')}</p>
          
          <h3 class="font-medium text-gray-700">Education</h3>
          <p class="mb-2">{basic.education}</p>
        </div>
        
        <div>
          <h3 class="font-medium text-gray-700">Birth</h3>
          <p class="mb-2">{basic.birth}</p>
          
          <h3 class="font-medium text-gray-700">Email</h3>
          <p class="mb-2">
            <a href={`mailto:${basic.email}`} class="text-blue-600 hover:underline">{basic.email}</a>
          </p>
          
          <h3 class="font-medium text-gray-700">Links</h3>
          <div class="flex flex-wrap gap-2">
            {links.map(link => (
              <a 
                href={link.url} 
                target="_blank" 
                rel="noopener noreferrer"
                class="inline-flex items-center text-blue-600 hover:underline"
              >
                {link.name}
                <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            ))}
          </div>
        </div>
      </div>
    </section>
    
    <section class="mb-12 bg-white p-6 rounded-lg shadow-sm">
      <h2 class="text-2xl font-bold mb-4">Research</h2>
      <p class="mb-4">{basic.bio}</p>
      
      <h3 class="font-medium text-gray-700 mb-2">Research Fields</h3>
      <div class="flex flex-wrap gap-2 mb-4">
        {research.fields.map(field => (
          <span class="px-3 py-1 bg-blue-50 border border-blue-200 rounded-full text-sm text-blue-700">
            {field}
          </span>
        ))}
      </div>
    </section>
    
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-12">
      <section class="bg-white p-6 rounded-lg shadow-sm">
        <h2 class="text-2xl font-bold mb-4">Scholarships</h2>
        <ul class="space-y-2">
          {scholarships.map(scholarship => (
            <li>
              <span class="font-medium">{scholarship.name}</span>
              <span class="text-gray-600 ml-2">({scholarship.period})</span>
            </li>
          ))}
        </ul>
      </section>
      
      <section class="bg-white p-6 rounded-lg shadow-sm">
        <h2 class="text-2xl font-bold mb-4">Professional Memberships</h2>
        <ul class="space-y-2">
          {memberships.map(membership => (
            <li>{membership.organization}</li>
          ))}
        </ul>
      </section>
    </div>
    
    <section class="mb-12 bg-white p-6 rounded-lg shadow-sm">
      <h2 class="text-2xl font-bold mb-4">Awards</h2>
      <ul class="space-y-4">
        {awards.map(award => (
          <li>
            <h3 class="font-medium">{award.name}</h3>
            {award.project && <p class="text-gray-700">{award.project}</p>}
          </li>
        ))}
      </ul>
    </section>
  </div>
</Layout>